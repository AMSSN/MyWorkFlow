{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe 生成活动文件",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
                "/Fo${fileDirname}\\build\\${fileBasenameNoExtension}.obj",   // obj 目录
                "/Fd${fileDirname}\\build\\${fileBasenameNoExtension}.pdb", // pdb 名字/路径
                // "/Fe:${fileDirname}\\build\\${fileBasenameNoExtension}.exe", // exe 输出
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}